{
  "manifest_version": 3,
  "name": "Pages Summarizer",
  "version": "1.3",
  "description": "Summarizes the content of YouTube videos or websites.",
  "icons": {
    "16": "icon-dark.png",
    "48": "icon-dark.png",
    "128": "icon-dark.png"
  },
  "theme_icons": {
    "16": {
      "light": "icon-dark.png",
      "dark": "icon-white.png"
    },
    "48": {
      "light": "icon-dark.png",
      "dark": "icon-white.png"
    },
    "128": {
      "light": "icon-dark.png",
      "dark": "icon-white.png"
    }
  },
  "permissions": ["activeTab", "storage", "scripting", "contextMenus"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-dark.png",
      "48": "icon-dark.png",
      "128": "icon-dark.png"
    }
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": ["https://api.perplexity.ai/*"]
}
